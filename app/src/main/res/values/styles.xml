<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 首页以及文件夹下标题栏的LinearLayout的Style -->
    <style name="TitleBarLinearLayout">
        <item name="android:paddingLeft">13dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/title_background</item>
    </style>
    <!-- 首页及文件夹下标题栏的TextView的Style -->
    <style name="TitleBarTextView">
        <item name="android:gravity">top</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#ffead1ae</item>
        <item name="android:text">"DianDi"</item>
        <item name="android:textSize">24sp</item>
    </style>
    <!-- 首页及文件夹下标题栏的ImageButton的Style -->
    <style name="TitleBarImageButton">
        <item name="android:background">@drawable/title_bar_imagebutton_add_note</item>
        <item name="android:gravity">top</item>
    </style>

    <!-- Base application theme. -->


    <style name="TextStyle">
        <item name="android:textColor">@color/text_bg</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="NormalBg" parent="NormalBgColor">
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="NormalBgColor">
        <item name="android:background">@color/normal_bg</item>
    </style>

    <style name="PressableBg">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="SignupTextView" parent="PressableBg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:gravity">end|right</item>
        <item name="android:textColor">@color/black_4a</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SignupEditText">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end|right</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_4a</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>
